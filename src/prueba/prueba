import pygame
import sys

# Inicializar Pygame
pygame.init()

# Definir las dimensiones de la pantalla
ancho = 800
alto = 600
pantalla = pygame.display.set_mode((ancho, alto))
pygame.display.set_caption("Prueba de Pygame")

# Definir colores
rojo = (255, 0, 0)
negro = (0, 0, 0)

# Bucle principal
ejecutando = True
while ejecutando:
    # Manejar eventos
    for evento in pygame.event.get():
        if evento.type == pygame.QUIT:
            ejecutando = False

    # Llenar la pantalla de negro
    pantalla.fill(negro)

    # Dibujar un rect√°ngulo rojo
    pygame.draw.rect(pantalla, rojo, (100, 100, 200, 100))

    # Actualizar la pantalla
    pygame.display.flip()

# Finalizar Pygame
pygame.quit()
sys.exit()